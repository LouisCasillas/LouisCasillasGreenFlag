<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_guideline"
        app:layout_constraintGuide_begin="50sp"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start2_guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="345dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start3_guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="332dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="360sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/button_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="500sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/button_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="560sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/button_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/button_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="380sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/image_logo"
        app:layout_constraintGuide_begin="250sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tick1_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="350sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tick2_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="390sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tick3_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="430sp" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintTop_toTopOf="@id/top_guideline" />

    <TextView
        android:id="@+id/middle_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/museosans500"
        android:text="GreenFlag customers can create an account to access"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toTopOf="@id/middle_guideline" />

    <ImageView
        android:id="@+id/image_tick1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tick"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintBottom_toBottomOf="@id/tick1_guideline"
        app:layout_constraintEnd_toEndOf="@id/start2_guideline"
 />

    <TextView
        android:id="@+id/tick1_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/museosans300"
        android:text="Car health updates"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/start3_guideline"
        app:layout_constraintBottom_toBottomOf="@id/tick1_guideline"
        />


    <ImageView
        android:id="@+id/image_tick2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tick"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintBottom_toBottomOf="@id/tick2_guideline"
        app:layout_constraintEnd_toEndOf="@id/start2_guideline"
        />

    <TextView
        android:id="@+id/tick2_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/museosans300"
        android:text="Request a rescue online"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/start3_guideline"
        app:layout_constraintBottom_toBottomOf="@id/tick2_guideline"
        />

    <ImageView
        android:id="@+id/image_tick3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tick"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintBottom_toBottomOf="@id/tick3_guideline"
        app:layout_constraintEnd_toEndOf="@id/start2_guideline"
        />

    <TextView
        android:id="@+id/tick3_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/museosans300"
        android:text="Policy information"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/start3_guideline"
        app:layout_constraintBottom_toBottomOf="@id/tick3_guideline"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_account_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:fontFamily="@font/museosans300"
        android:text="Create an account"
        android:textAllCaps="false"
        android:background="@drawable/gradient"
        app:layout_constraintStart_toStartOf="@id/button_start_guideline"
        app:layout_constraintEnd_toEndOf="@id/button_end_guideline"
        app:layout_constraintTop_toTopOf="@id/button_top_guideline"
        app:layout_constraintBottom_toBottomOf="@id/button_bottom_guideline"
        />

</androidx.constraintlayout.widget.ConstraintLayout>